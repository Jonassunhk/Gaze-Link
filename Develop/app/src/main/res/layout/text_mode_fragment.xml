<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/textModeFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/purple_500"
    android:orientation="horizontal"
    tools:context=".text_mode_display">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.8"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textModeTitle"
            android:layout_width="234dp"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:text="Text Mode"
            android:textAlignment="textStart"
            android:textColor="@color/purple_500"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/contextBox"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:background="@color/ghost_blue"
            android:ems="10"
            android:gravity="start|top"
            android:hint="Enter context"
            android:inputType="textMultiLine"
            android:textColor="@color/purple_500" />

        <TextView
            android:id="@+id/textInput"
            android:layout_width="match_parent"
            android:layout_height="113dp"
            android:background="@color/columbia_blue"
            android:padding="5sp"
            android:textColor="@color/black"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/gazeInputLog"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/purple_500"
            android:padding="5sp"
            android:textAlignment="viewStart"
            android:textColor="@color/beige"
            android:textSize="15sp"
            tools:text="NO INPUT" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.45"
        android:background="#ECF3F3"
        android:orientation="vertical"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:padding="2sp"
                android:src="@drawable/upgaze" />

            <TextView
                android:id="@+id/upGazeText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="2dp"
                android:textColor="#202020"
                android:textSize="20sp"
                tools:text="Current text" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:padding="2sp"
                android:src="@drawable/leftgaze" />

            <TextView
                android:id="@+id/leftGazeText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="2dp"
                android:textColor="#202020"
                android:textSize="20sp"
                tools:text="Current text" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:padding="2sp"
                android:src="@drawable/rightgaze" />

            <TextView
                android:id="@+id/rightGazeText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="2dp"
                android:textColor="#202020"
                android:textSize="20sp"
                tools:text="Current text" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:padding="2sp"
                android:src="@drawable/closedgaze" />

            <TextView
                android:id="@+id/closedGazeText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="2dp"
                android:textColor="#202020"
                android:textSize="20sp"
                tools:text="Current text" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:padding="2sp"
                android:src="@drawable/leftupgaze" />

            <TextView
                android:id="@+id/leftUpGazeText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="2dp"
                android:textColor="#202020"
                android:textSize="20sp"
                tools:text="Current text" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:padding="2sp"
                android:src="@drawable/rightupgaze" />

            <TextView
                android:id="@+id/rightUpGazeText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="2dp"
                android:textColor="#202020"
                android:textSize="20sp"
                tools:text="Current text" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>